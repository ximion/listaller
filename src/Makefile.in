# Makefile for Listaller 0.4
#
# Targets:
# The First target is the one build when there is nothing on make command line
all:
	./make-base.sh
	%GTK+%./make-gui.sh WIDGET=gtk2
	%Qt%./make-gui.sh WIDGET=qt4
	%Qt%%LiCreator%./make-creator.sh WIDGET=qt4
	%GTK+%%LiCreator%./make-creator.sh WIDGET=gtk2

install:
	./install-core.sh
	./install-tools.sh
	./install-data.sh
	%GTK+%./install-gui.sh WIDGET=gtk2 prefix=%PREFIX%
	%Qt%./install-gui.sh WIDGET=qt4 prefix=%PREFIX%
	%Qt%%LiCreator%./install-creator.sh WIDGET=qt4 prefix=%PREFIX%
	%GTK+%%LiCreator%./install-creator.sh WIDGET=gtk2 prefix=%PREFIX%

install-all-bin:
	./install-core.sh
	./install-tools.sh
	%GTK+%./install-gui.sh WIDGET=gtk2 prefix=%PREFIX%
	%Qt%./install-gui.sh WIDGET=qt4 prefix=%PREFIX%

install-data:
	./install-data.sh prefix=%PREFIX%

install-tools:
	./install-core.sh prefix=%PREFIX%
	./install-tools.sh prefix=%PREFIX%

install-front:
	./install-core.sh prefix=%PREFIX%
	%GTK+%./install-gui.sh WIDGET=gtk2 prefix=%PREFIX%
	%Qt%./install-gui.sh WIDGET=qt4 prefix=%PREFIX%

clean:
	./clean.sh

uninstall:
	./uninstall.sh prefix=%PREFIX%
