# Makefile for Listaller Project
#
# Targets:
# The First target is the one built when there is nothing on make command line
all:
	./make-base.sh
	%GTK+%./make-gui.sh WIDGET=gtk2
	%Qt%./make-gui.sh WIDGET=qt4
	%Qt%%LiCreator%./make-creator.sh WIDGET=qt4
	%GTK+%%LiCreator%./make-creator.sh WIDGET=gtk2

install:
	./install-core.sh prefix=%PREFIX% libdir=%LIBDIR%
	./install-tools.sh prefix=%PREFIX% libdir=%LIBDIR%
	./install-data.sh prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%./install-gui.sh WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%./install-gui.sh WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%%LiCreator%./install-creator.sh WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%%LiCreator%./install-creator.sh WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%

install-binonly:
	./install-core.sh prefix=%PREFIX% libdir=%LIBDIR%
	./install-tools.sh prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%./install-gui.sh WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%./install-gui.sh WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%

install-data:
	./install-data.sh prefix=%PREFIX% libdir=%LIBDIR%

install-tools:
	./install-core.sh prefix=%PREFIX% libdir=%LIBDIR%
	./install-tools.sh prefix=%PREFIX% libdir=%LIBDIR%

install-front:
	./install-core.sh prefix=%PREFIX% libdir=%LIBDIR%
	%GTK+%./install-gui.sh WIDGET=gtk2 prefix=%PREFIX% libdir=%LIBDIR%
	%Qt%./install-gui.sh WIDGET=qt4 prefix=%PREFIX% libdir=%LIBDIR%

srcdoc:
	./writedoc.sh

clean:
	./clean.sh

uninstall:
	./uninstall.sh prefix=%PREFIX% libdir=%LIBDIR%
