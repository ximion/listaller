#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-stamp

build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	#Build Gtk2-release
	$(MAKE) WIDGET=gtk2 all
	$(MAKE) WIDGET=gtk2 licreator
	#make WIDGET=gtk2 litheme
	#Build Qt4 release
	$(MAKE) WIDGET=qt4 all
	$(MAKE) WIDGET=qt4 licreator
	#make WIDGET=qt4 litheme
	#docbook-to-man debian/listaller.sgml > listaller.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	# Add here commands to install the package into debian/listaller.
	echo "Installing binaries..."
	$(MAKE) DESTDIR=./debian/listaller-tools libuildtools-inst
	$(MAKE) DESTDIR=./debian/listaller-core install-lipa
	# Install Gtk release
	$(MAKE) WIDGET=gtk2 DESTDIR=./debian/listaller-gtk install
	$(MAKE) WIDGET=gtk2 DESTDIR=./debian/listaller-creation-gtk licreator-inst
	 #make WIDGET=gtk2 DESTDIR=./debian/lithememgr-gtk litheme-inst
	# Install Qt4 release
	$(MAKE) WIDGET=qt4 DESTDIR=./debian/listaller-qt install
	$(MAKE) WIDGET=qt4 DESTDIR=./debian/listaller-creation-qt licreator-inst
	 #make WIDGET=qt4 DESTDIR=./debian/lithememgr-gtk litheme-inst

# Build architecture-independent files here.
binary-indep: build install
	echo "Installing architecture independent files..."
	$(MAKE) DESTDIR=./debian/listaller-data install-data

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip --dbg-package=listaller-gtk-dbg --dbg-package=listaller-tools-dbg --dbg-package=listaller-core-dbg --dbg-package=listaller-creation-gtk-dbg --dbg-package=lithememgr-gtk-dbg --dbg-package=listaller-qt-dbg --dbg-package=listaller-creation-qt-dbg
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
