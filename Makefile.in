# Makefile for Listaller 0.4
all:
	$(MAKE) -C ./src all

install:
	$(MAKE) -C ./src install

install-binonly:
	$(MAKE) -C ./src install-binonly

install-data:
	$(MAKE) -C ./src install-data

install-tools:
	$(MAKE) -C ./src install-tools

install-front:
	$(MAKE) -C ./src install-front

srcdoc:
	$(MAKE) -C ./src srcdoc

clean:
	$(MAKE) -C ./src clean

distclean:
	$(MAKE) clean

cleanreset:
	$(MAKE) clean ALL=1

uninstall:
	$(MAKE) -C ./src uninstall
