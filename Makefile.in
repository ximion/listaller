# Makefile for Listaller 0.5
all:
	$(MAKE) -C ./build all

install:
	$(MAKE) -C ./build install

test:
	$(MAKE) -C ./build test

test-verbose:
	$(MAKE) -C ./build test ARGS=-V

translations:
	$(MAKE) -C ./build translations

nls-update:
	$(MAKE) -C ./build nls-update

clean:
	$(MAKE) -C ./build clean

distclean:
	$(MAKE) -C ./build clean
	bash ./tools/scripts/treeclean.sh

uninstall:
	$(MAKE) -C ./build uninstall
